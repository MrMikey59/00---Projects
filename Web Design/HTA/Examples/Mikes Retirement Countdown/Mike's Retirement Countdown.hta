      </P>

<SCRIPT language="JavaScript" text="text/javascript">
// Display a countdown clock based on an event my birthday: 12-30
  var strDisplay;
  var timerID = null;
  var timerRunning = false;
  
  function showtime() {
    now = new Date();
    var CurHour = now.getHours();
    var CurMinute = now.getMinutes();
    var CurYear = now.getYear();
    var CurMonth = now.getMonth();
    var CurDate = now.getDate();
    var CurSecond = now.getSeconds();
    now = null;
    Hourleft = 23 - CurHour;
    Minuteleft = 59 - CurMinute;
    Secondleft = 59 - CurSecond;
    var Yearsleft = 2022 - CurYear - 1900;   // Target Year (1900 is an adjustment for date type)
    var Monthleft = 05 - CurMonth;            // Target Month - 1
    var Dateleft = 29 - CurDate;             // Target Date - 1
    if (Dateleft<0) {
      Monthleft = Monthleft-1;
      switch (CurMonth) {
        case 1  : Dateleft = Dateleft + 28;  // Feb - assumes no leap year
        case 3  : Dateleft = Dateleft + 30;  // Apr
        case 5  : Dateleft = Dateleft + 30;  // Jun
        case 8  : Dateleft = Dateleft + 30;  // Sep
        case 10 : Dateleft = Dateleft + 30;  // Nov
        default : Dateleft = Dateleft + 31;  // Jan, Mar, May, Jul, Aug, Oct, Dec.
      }
    }; //Assumes all months are 30 days long
    if (Monthleft!=1) {var mos="s"} else {var mos=""};
    if (Dateleft!=1) {var ds="s"} else {var ds=""};
    if (Hourleft!=1) {var hs="s"} else {var hs=""};
    if (Minuteleft!=1) {var mis="s"} else {var mis=""};
    if (Secondleft!=1) {var ss="s"} else {var ss=""};
    if (Monthleft < 0 ) {
      Monthleft = Monthleft + 12;
      Yearsleft = Yearsleft - 1;
    }
    strDisplay=Yearsleft+' Years, '+Monthleft+' month'+mos+', '+Dateleft+' day'+ds+', '+Hourleft+' hour'+hs+', ';
    strDisplay=strDisplay+Minuteleft+' minute'+mis+', '+Secondleft+' second'+ ss + '.';
    document.frmTilBD.left.value=strDisplay;
    timerID = setTimeout("showtime()",1000);
    timerRunning = true;
  }
  
  function stopclock () 
 {
    if(timerRunning)
    clearTimeout(timerID);
    timerRunning = false;
  }
 
  function startclock () {
    // Make sure the clock is stopped
    stopclock();
    showtime();
  }
</SCRIPT>

