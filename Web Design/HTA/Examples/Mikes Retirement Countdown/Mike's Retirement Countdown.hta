<SCRIPT text="text\vbscipt" language="VBScript">
Sub Load()
  ResizeWindow 1000,250 
  startclock()  ' call to a javascript subroutine for the countdown timer!
End Sub

Sub ResizeWindow (winWidth, winHeight)
  window.resizeTo winWidth, winHeight
End Sub
